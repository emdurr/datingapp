  </head>

  <body>
  	<%= render 'layouts/topnav' %>
    <div class="container">
    	<% flash.each do |key, value| %>
      	<div class="alert alert-<%= key %>">
        <a href="#" data-dismiss="alert" class="close">Ã—</a>
        <%= value %>
      	</div>
    	<% end %>
    	<%= yield %>
    </div>
  </body>
</html>
