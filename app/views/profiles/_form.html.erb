<%= form_for(profile) do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, ['Male', 'Female'], {}, class: 'browser-default' %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label :eye_color %><br />
    <%= f.select :eye_color, ['Black', 'Blue', 'Brown', 'Green', 'Hazel'], {}, class: 'browser-default' %>
  </div>

  <div class="field">
    <%= f.label :hair_color %><br />
    <%= f.select :hair_color, ['Black', 'Blonde', 'Brown', 'Red'], {}, class: 'browser-default' %>
  </div>

  <div class="field">
    <%= f.label :height %><br />
    <%= f.text_field :height %>
  </div>

  <div class="field">
    <%= f.label :ethnicity %><br />
    <%= f.text_field :ethnicity %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
