<p id="notice"><%= notice %></p>
<% if current_user.profile %>
<h1>Profiles</h1>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Gender</th>
        <th>Eye color</th>
        <th>Hair color</th>
        <th>Height</th>
        <th>Ethnicity</th>
        <th colspan="3"></th>
      </tr>
    </thead>  

    <tbody>
      <% @profiles.each do |profile| %>
        <% next if profile.user == current_user %>
        <% next if profile.gender == current_user.profile.gender %>
        <tr>
          <td><%= "#{profile.user.first_name} #{profile.user.last_name}" %></td>
          <td><%= profile.gender %></td>
          <td><%= profile.eye_color %></td>
          <td><%= profile.hair_color %></td>
          <td><%= profile.height %></td>
          <td><%= profile.ethnicity %></td>
          <td><%= link_to 'Show', profile_path(profile) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  

  <br>  

<% else %>
<h1>Profiles</h1>
<h5>You currently have no profile. Please add a profile to view others'</h5>
<%= link_to 'Add Your Profile', new_profile_path(current_user) %>
<% end %>